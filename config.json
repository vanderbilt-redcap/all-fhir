{
    "name": "ALL FHIR",
    "description": "Fetch and store FHIR payloads",
    "namespace": "Vanderbilt\\AllFhir",
    "framework-version": 16,
    "authors": [
        {
            "name": "Francesco Delacqua",
            "email": "francesco.delacqua@vumc.org",
            "institution": "Vanderbilt University Medical Center"
        }
    ],
    "project-settings": [
        {
            "key": "fhir-system",
            "name": "FHIR System",
            "required": true,
            "type": "text",
            "hidden": true
        },
        {
            "key": "mapping-resources",
            "name": "Mapping Resource",
            "required": false,
            "type": "json",
            "repeatable":true,
            "hidden": true
        },
        {
            "key": "custom-mapping-resources",
            "name": "Custom Mapping Resource",
            "required": false,
            "type": "json",
            "repeatable":true,
            "hidden": true
        },
        {
            "key": "tasks",
            "name": "Task",
            "required": false,
            "type": "json",
            "repeatable":true,
            "hidden": true
        }
    ],
    "links": {
        "project": [
            {
                "name": "ALL FHIR",
                "icon": "fas fa-fire-flame-curved",
                "url": "pages/project/index.php"
            }
        ]
    },
    "no-csrf-pages": [
         "api"
    ],
    "enable-every-page-hooks-on-system-pages": true,
    "enable-every-page-hooks-on-login-form": true,
    "crons": [
        {
           "cron_name": "process_queue",
           "cron_description": "Process jobs registered in the queue",
           "method": "cron_processQueue",
           "cron_frequency": "60",
           "cron_max_run_time": "3600"
        },
        {
           "cron_name": "fetch_pending",
           "cron_description": "Fetch pending FHIR resources",
           "method": "cron_fetchPending",
           "cron_frequency": "60",
           "cron_max_run_time": "3600"
        }
    ]

}
